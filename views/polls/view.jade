#pollQuestions.wrap
	h3 = poll.title
	h4 Subtitle

#poll.wrap
	#pollOptions
		ul
			each opt,key in poll.opts
				li
					span.refColor
						span
					input(type="radio", name="votePoll", id="votePoll" + key)
					label(for="votePoll" + key)= opt.title

		p
			button.cta(type="submit")
				strong Vote

	#pollGraph
	
	-if(!auth){
		#socialLogin
			p
				em You need to be logged-in in order to vote
				span#twitter-login
					a.cta(href='/login/twitter') 
						strong Twitter
				span#facebook-login
					a.cta(href='/login/facebook') 
						strong Facebook
	-}

