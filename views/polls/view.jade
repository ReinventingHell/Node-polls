#pollQuestions.wrap
	h3= poll.title
	h4= poll.subtitle

#poll.wrap
	-if(!voter){
		#pollOptions
			ul
				each opt,key in poll.opts
					li
						span.refColor
							span
						input(type="radio", name="votePoll", id="votePoll" + key)
						label(for="votePoll" + key)= opt.title

			p
				a.cta#vote-submit
					strong Vote Now!
	-}
	-var poll_style = (voter) ? "width:100%" : "";
	#pollGraph(style=poll_style)
		#chart
	
	-if(!auth){
		#socialLogin
			p
				em You need to be logged-in in order to vote
				span#twitter-login
					a.cta(href='/login/twitter') 
						strong Login with Twitter
				span#facebook-login
					a.cta(href='/login/facebook') 
						strong Login with Facebook
	-}

#pollSnippet.wrap
	h5 Paste this code on your website to show the poll:
	pre #{'<iframe src="local.host:3000/polls/'}#{poll._id}#{'" frameborder="0" marginheight="0" marginwidth="0" scrolling="no"></iframe>'}
	h5 Or share this poll in:
	p
		<g:plusone size="medium" href="http://instapoll.in"></g:plusone>
		a.twitter-share-button(href="https://twitter.com/share") Tweet
		<iframe src="//www.facebook.com/plugins/like.php?href&amp;send=false&amp;layout=standard&amp;width=320&amp;show_faces=false&amp;action=like&amp;colorscheme=light&amp;font&amp;height=35&amp;appId=232069393501695" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:320px; height:35px;" allowTransparency="true"></iframe>

